@model IDGS902_Tema1.Models.Traductor

@{
    ViewBag.Title = "Registrar";
}

<h2>Registrar</h2>

<form action="/" method="post"></form>

@using (Html.BeginForm("Registrar", "Traductor", FormMethod.Post, new {@class = "formulario"} ))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Spanish,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Spanish,
               new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.English,
           htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.English,
               new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 pt-3 col-md-10">
                <input type="submit" name="name" value="Registrar" class="btn btn-outline-primary" />
                <a href="/Traductor/LeerDatos" class="btn btn-outline-success"><i class="bi bi-eye-fill"></i> Ver palabras</a>
            </div>
        </div>
        <h3 class="mt-3">@ViewBag.Result</h3>
    </div>
}

@using (Html.BeginForm("Traducir", "Traductor", FormMethod.Post))
{ 
    <div class="form-group mt-3">
        <label>Traductor de palabras:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Filtro,
               new { htmlAttributes = new { @class = "form-control"} })
        </div>
        <div class="form-check">
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Estatus, "1",
                new { htmlAttributes = new { @class = "form-check-input" } })
                <label class="form-check-label" for="flexRadioDefault1">
                    Español
                </label>
            </div>
        </div>
        <div class="form-check">
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Estatus, "0",
                new { htmlAttributes = new { @class = "form-check-input"} })
                <label class="form-check-label" for="flexRadioDefault1">
                    Ingles
                </label>
            </div>
        </div>
        <div class="col-md-2">
            <input type="submit" name="name" value="Traducir" class="btn btn-outline-success" />
        </div>
        <h3 class="mt-3">Palabra traducida: @ViewBag.Resultado</h3>
    </div>
}